<h1>Add purchases</h1>
<form action="/purchases/add" method="POST">

<select name ="product_id">

	{{#products}}
	<option value = "{{product_name}}">{{product_name}}</option>
	{{/products}}
	</select>

     qty: <input type="number" name="qty" value="{{qty}}">
     cost_price: <input type="price" name="cost_price" value="{{cost_price}}">
	stock_date: <input type="date" name="stock_date" value="{{stock_date}}">
	

	<select name ="supplier_id">

	{{#suppliers}}
	<option value = "{{supplier_name}}">{{supplier_name}}</option>
	{{/suppliers}}
	</select>

	<input type="submit">

</form>

<h1>Purchases Records</h1>
<div class="container">
<table class="col-xs-12">

	<tr><thead>
	<th>Product Name</th>
	<th>Quantity</th>
	<th>cost-price</th>
	<th>stock-date</th>
	<th>supplier-name</th>
	<th>edit/delete</th>

</tr></thead>
<tbody>
 {{#purchases}}
<tr>
<td>{{product_name}}</td>
<td>{{qty}}</td>
<td>R{{cost_price}}</td>
<td>{{stock_date}}</td>
<td>{{supplier_name}}</td>


<td> 
	<a href="/puchases/edit/{{id}}">Edit</a>
     <a href="/purchase/delete/{{id}}">Delete</a>
</td>
</tr>
{{/purchases}}
</tbody>
</table>
</div